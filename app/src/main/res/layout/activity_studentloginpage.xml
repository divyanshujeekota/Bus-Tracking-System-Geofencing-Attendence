<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Studentloginpage">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="480dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:translationZ="50dp"
        app:cardCornerRadius="50dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="142dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Student Login"
            android:textColor="#B8AC45"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/studentloginicon" />

        <Button
            android:id="@+id/www"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="410dp"
            android:layout_weight="1"
            android:backgroundTint="#D5C954"
            android:onClick="loginMessage"
            android:text="Login"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/reg_no_input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Reg No."
            android:inputType="text"
            android:textColor="#C7BD5D"
            android:textColorHint="#C7BD5D"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#C7BD5D"
            android:textColorHighlight="#C7BD5D"
            android:textColorHint="#C7BD5D"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>


</LinearLayout>